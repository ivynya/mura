version: '3.7'

vysc_project: mura
vysc_nginx:
  mura-api:
    listen_host: io.ivy.direct
    listen_path: /mura
    proxy_port: 3000
  mura:
    listen_host: mura.ivy.direct
    listen_path: /
    proxy_port: 3000

services:
  mura:
    image: ghcr.io/ivynya/mura/mura:latest
    restart: unless-stopped
    ports:
      - 5200:3000
  mura-api:
    image: ghcr.io/ivynya/mura/mura-api:latest
    restart: unless-stopped
    ports:
      - 5201:3000